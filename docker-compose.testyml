version: '3.8'

services:
  react:
    build:
      context: ./neural-roots-ui
      dockerfile: Dockerfile.dev
    ports:
      - 3000:3000
  web:
    build: ./neural-roots-backend
    command: python manage.py runserver 0.0.0.0:8000
    volumes:
      - ./neural-roots-backend/:/usr/src/neural-roots-backend/
    ports:
      - 8000:8000
    env_file:
      - ./.env.dev